#include <stdio.h>

struct Date {
    int day;
    int month;
    int year;
};

struct Employee {
    char name[50];
    int id;
    struct Date joiningDate;
};

int main() {
    struct Employee emp = {"Alice", 1001, {15, 8, 2020}};
    FILE *fp;

    // Write employee to binary file
    fp = fopen("employee.dat", "wb");
    if (fp == NULL) {
        perror("Error opening file for writing");
        return 1;
    }

    fwrite(&emp, sizeof(struct Employee), 1, fp);
    fclose(fp);

    // Read employee from binary file
    struct Employee empRead;
    fp = fopen("employee.dat", "rb");
    if (fp == NULL) {
        perror("Error opening file for reading");
        return 1;
    }

    fread(&empRead, sizeof(struct Employee), 1, fp);
    fclose(fp);

    // Print read data
    printf("Employee details read from file:\n");
    printf("Name: %s\n", empRead.name);
    printf("ID: %d\n", empRead.id);
    printf("Joining Date: %02d-%02d-%04d\n", empRead.joiningDate.day, empRead.joiningDate.month, empRead.joiningDate.year);

    return 0;
}
