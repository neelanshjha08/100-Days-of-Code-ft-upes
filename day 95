#include <stdio.h>

struct Student {
    char name[50];
    int roll_no;
    float marks;
};

// Function to find and return the top student
struct Student getTopStudent(struct Student students[], int size) {
    int i, maxIndex = 0;
    for (i = 1; i < size; i++) {
        if (students[i].marks > students[maxIndex].marks) {
            maxIndex = i;
        }
    }
    return students[maxIndex];  // Return top student
}

int main() {
    struct Student students[5] = {
        {"Alice", 101, 88.5},
        {"Bob", 102, 92.0},
        {"Charlie", 103, 87.0},
        {"David", 104, 95.5},
        {"Eve", 105, 90.0}
    };

    struct Student top = getTopStudent(students, 5);

    printf("Top student details:\n");
    printf("Name: %s\n", top.name);
    printf("Roll Number: %d\n", top.roll_no);
    printf("Marks: %.2f\n", top.marks);

    return 0;
}
